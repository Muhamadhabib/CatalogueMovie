<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorPrimary"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_movie"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/prog_movie"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/iv_poster_movie"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
            </RelativeLayout>

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/img"
                android:id="@+id/tv_title_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/img"
                android:layout_below="@id/tv_title_movie"
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_stars_black_24dp"
                />
            <TextView
                android:layout_below="@id/tv_title_movie"
                android:layout_toEndOf="@id/star"
                android:id="@+id/tv_ave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.0"
                android:textSize="15sp"
                />
            <TextView
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/img"
                android:layout_below="@id/star"
                android:id="@+id/release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/release_date"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/img"
                android:layout_below="@id/release"
                android:id="@+id/tv_date_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:textSize="15sp"
                />
            <TextView
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/img"
                android:layout_below="@id/tv_date_movie"
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overview"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/img"
                android:layout_below="@id/overview"
                android:id="@+id/tv_view_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="3"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>